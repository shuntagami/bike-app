<% unless current_user?(user) %>
  <%= link_to user_relationships_path(user.id), method: :post, remote: true do%>
    <% if user.followed_by?(current_user) %>
      <button class = "unfollow_button">
        <span class="nomal">フォロー中</span>
        <span class="hover">フォロー解除</span>
      </button>
    <% else %>
      <button class="follow_button">フォロー</button>
    <% end%>
  <% end %>
<% end %> 