<div class="row">
  <% posts.each do |post|%>
    <div class="col-lg-4 col-md-12 card-index">
      <div class="card" >
        <div class="card-header" >
          <div class="post-user float-left">
            <% if post.user.avatar? %>
              <%= link_to image_tag(post.user.avatar.to_s, class: 'user_avatar', alt: 'avatar image'), post.user, class: 'mr-2' %>
              <% else%>
              <%= link_to image_tag('no-avatar.png', class: 'user_avatar', alt: 'avatar image'), post.user, class: 'mr-2' %>
            <% end%> 
            <%= link_to post.user.name, post.user, class: "text-black-50 text-decoration-none" %>
          </div>
          <div class="post-time float-right">
            <small><%= time_ago_in_words(l post.created_at) + "前" %></small>
          </div>
        </div>
        <div class="bike_image_index">
        <%= link_to image_tag(post.image.to_s, class: 'img', alt: 'bike image'), post %>
        </div>
        <div class="card-footer">
          <div>
            <span><%= "コメント#{post.comments.count}件" %></span>
            <span><%= "いいね！#{post.likes.count}件" %></span>
          </div>
        </div>
      </div>
    </div>
  <% end%>
</div>