<div class="row">
  <% @posts.each do |post|%>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card mt-4" >
        <div class="card-header p-2" >
          <div class="post-user float-left">
            <% if post.user.avatar.attached? %>
              <%= link_to image_tag(post.user.avatar, class: 'user_avatar', alt: 'avatar image'), user_path(post.user.id) %>
              <% else%>
              <%= link_to image_tag('no-avatar.png', class: 'user_avatar', alt: 'avatar image'), user_path(post.user.id) %>
            <% end%> 
            <%= link_to post.user.name, user_path(post.user.id), class: "text-black-50 text-decoration-none" %>
          </div>
          <div class="post-time float-right">
            <small><%= time_ago_in_words(l post.created_at) + "前" %></small>
          </div>
        </div>
        <div class="bike_image_index">
        <%= link_to image_tag(post.image, class: 'img', alt: 'bike image'), post_path(post.id) %> 
        </div>
        <div class="card-footer">
          <div>
            <span><%= "コメント#{post.comments.count}件" %></span>
            <span><%= "いいね！#{post.likes.count}件" %></span>
          </div>
        </div>
      </div>
    </div>
  <% end%>
</div>