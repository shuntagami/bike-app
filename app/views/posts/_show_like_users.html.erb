<div class="row">
  <% objects.each do |user| %>
    <div class="col-md-6">
      <div class="user-card card card-index align-items-center">
        <% if user.avatar? %>
          <%= link_to image_tag(user.avatar.to_s, size: "120x120", class: "rounded-circle", alt: "avatar image"), user %>
        <% else %>
          <%= link_to image_tag("no-avatar.png", size: "120x120", class: "rounded-circle", alt: "avatar image"), user %>
        <% end %>
        <%= link_to user.name, user, class: 'user-name' %>

        <% if user_signed_in? && !(current_user.admin?) %>
          <%= render 'users/follow_area', user: user %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>