  <%= form_with model: @post, local: true do |f| %>
    <div class="form-group row">
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'custom-file-input' %>
      <div class="col-md-6 add_image text-center" id="img_field" onClick="$('#post_image').click()">
        <% if @post.image.attached? %>
          <%= image_tag(@post.image) %>
        <% else %>
          <i class="fas fa-camera"></i>
        <% end %>
      </div>
      <div class="col-md-6 col-right">
        <div class="weight-bold-text">
          バイク名
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :name, class:"bikes-text mb-4", id:"bike-name", placeholder:"(例)CB400sf", maxlength:"40" %>
        <%= f.label :caption, '説明（３００文字以内）' %>
        <%= f.text_area :description, class: 'form-control', rows: 12, placeholder: '説明を入力してください' %>
      </div>
    </div>
    <div class='form-group row'>
      <div class="col-md-6">
        <div class="weight-bold-text">
            排気量
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:cc_id, Cc.all, :id, :name, {}, {class:"select-box", id:"bike-cc"}) %>
      </div>

      <div class='col-md-6 col-right'>
        <div class="weight-bold-text">
            メーカー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:maker_id, Maker.all, :id, :name, {}, {class:"select-box", id:"bike-maker"}) %>
      </div>

      <div class="col-md-6">
        <div class="weight-bold-text">
            種類
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"select-box", id:"bike-type"}) %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.submit "投稿する" ,class:"post-btn" %>
    </div>
  <% end %>
</div>

