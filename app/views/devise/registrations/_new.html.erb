<div class="modal fade" id="signUpModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Sign Up</h1>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :name, 'name（maxium 10）' %>
            <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control', required: 'required' %>

            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: 'required' %>
  
            <%= f.label :password, 'Password（minimum 8）' %>
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: 'required', minlength: '8' %>
  
            <%= f.label :password_confirmation, 'Confirm Password' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: 'required' %>
          </div>
          <div class="mb-3">
            <%= f.submit 'Register', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>